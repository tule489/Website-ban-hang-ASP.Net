@model WebsiteBanDoGiaDung.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Admin Login</title>

    <link href="~/Assets/Admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Assets/Admin/css/font-awesome/font-awesome.css" rel="stylesheet">

    <link href="~/Assets/Admin/css/animate.css" rel="stylesheet">
    <link href="~/Assets/Admin/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg" style="background: url(/Assets/Admin/img/bg_login.jpg)">
    <div class="loginColumns animated fadeInDown">
        <div class="row">
            <div class="col-md-6">
                <h1 class="font-bold">WELCOME TO<br />ADMIN CONTROL</h1>
            </div>
            <div class="col-md-6">
                <div class="ibox-content" style="border-radius: 8px; background-color: rgba(0,0,0,0.2); opacity: 0.7">
                    <span style="color: black; font-weight: 800; opacity: 1">@Html.ValidationSummary(false)</span>
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.username, htmlAttributes: new { @class = "form-control", placeholder = "Username", @style = "border-radius: 8px" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.password, htmlAttributes: new { @class = "form-control", placeholder = "Password", @style = "border-radius: 8px" })
                        </div>
                        <button type="submit" class="btn btn-primary block full-width m-b" style="border-radius: 8px">Login</button>
                    }
                    <form class="m-t" role="form" action="index.html"></form>
                    <p class="m-t">
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

